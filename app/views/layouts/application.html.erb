<!DOCTYPE html>
<html>
  <head>
    <title>Gamematch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%if session[:user_id]%>
        <%=link_to("マイページ","/mypage", class: "header__register")%>
      <%else%>
        <%=link_to("新規登録","/signup",class: "header__register")%>
          <%=link_to("ログイン","/login_form",class: "header__register")%>
      <%end%>
    </header>
    <%= yield %>
  </body>
</html>
